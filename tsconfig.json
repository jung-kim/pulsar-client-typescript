{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES6",
    "useDefineForClassFields": true,
    "module": "ES6",
    "moduleResolution": "node",
    "isolatedModules": false,
    "strict": true,

    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "*": ["src/*"],
    },
    "lib": ["esnext", "dom", "es6", "scripthost"],
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
